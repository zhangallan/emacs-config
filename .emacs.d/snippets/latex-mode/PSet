\RequirePackage[l2tabu, orthodox]{nag} % Nagging for obsolete commands and stuff

\documentclass{article}

%%%%%%%%%%%%%% Standard Packages %%%%%%%%%%%%%%%%%

%%% Formatting
\usepackage{setspace} % For changing spacing
\usepackage[cm]{fullpage} % Makes margins smaller
\usepackage{titling} % Makes titles look nice
\usepackage{microtype} % Makes spacing better.

%%% Math
\usepackage{amsmath} % Standard math package
\usepackage{amsthm} % For theorems
\usepackage{amssymb} % Standard math symbol package

%%% Additional Features
\usepackage{graphicx} % Allows importation of image files into document
\usepackage[colorlinks=true,urlcolor=blue,linkcolor=Green,citecolor=RedViolet]{hyperref} % Allows direct linking. Links are also colored
\usepackage{booktabs} % Useful for the Excel to Latex package when constructing tables. Lets you have tables w/o vertical separators
\usepackage{enumitem} % Lets you customize labels on lists better

%%% Quality of life
\usepackage{lmodern} % Makes Latex less picky about font sizes

%%%%%%%%%%%%%%%% Creating new commands to make things easy on myself

\newcommand{\e}{\epsilon} % Only done because epsilon is annoying to type

%%%%%%%%%%%%%%%% Theorem environments
\newtheorem{prop}{Proposition}
\newtheorem{thm}{Theorem}
\newtheorem{lemma}{Lemma}
\newtheorem{cor}{Corollary}

%%%%%%%%%%%%%%%

\begin{document}

%%%%%%%%%%%%%%% Title stuff

